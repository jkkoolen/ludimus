<html xmlns:spring="http://www.springframework.org/tags"
      xmlns:jsp="http://java.sun.com/JSP/Page"
      xmlns:form="http://www.springframework.org/tags/form"
      xmlns:c="http://java.sun.com/jsp/jstl/core"
>
    <meta charset="utf-8"/>

    <spring:url value="/resources" var="resourceUrl"/>
<head>
    <link rel="stylesheet" type="text/css" href="${resourceUrl}/css/ludimus.css"></link>
    <link rel="stylesheet" type="text/css" href="${resourceUrl}/jquery-ui-1.11.2.custom/jquery-ui.css"></link>
    <link rel="stylesheet" type="text/css" href="${resourceUrl}/bootstrap-3.3.2-dist/css/bootstrap.css"></link>
    <![CDATA[<script src='${resourceUrl}/jquery/jquery-1.11.1.min.js'></script>]]>
    <![CDATA[<script src='${resourceUrl}/jquery-ui-1.11.2.custom/jquery-ui.js'></script>]]>
    <![CDATA[<script src='${resourceUrl}/bootstrap-3.3.2-dist/js/bootstrap.js'></script>]]>
    <![CDATA[<script src='${resourceUrl}/js/ludimus.js'></script>]]>
</head>

<body>
<div class="panel panel-default">
    <div class="panel-heading">
        <jsp:include page="/WEB-INF/view/jsp/menu.jspx"/>
        <c:if test="${not empty SUCCESS}">
            <div id="overallmessage" class="alert alert-success"><spring:message code="${SUCCESS}"/></div>
        </c:if>
        <c:if test="${not empty WARNING}">
            <div id="overallmessage" class="alert alert-warning"><spring:message code="${WARNING}"/></div>
        </c:if>
        <c:if test="${not empty ERROR}">
            <div id="overallmessage" class="alert alert-error"><spring:message code="${ERROR}"/></div>
        </c:if>

        <br/>
    </div>

    <div class="panel-body">
        <jsp:doBody/>
    </div>

    <div class="panel-footer">
        <jsp:include page="/WEB-INF/view/jsp/footer.jspx"/>
    </div>
</div>
</body>
</html>